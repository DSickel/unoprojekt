# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#Login
GET		/login						controllers.Application.login()
POST	/startseite					controllers.Application.startseite()
GET 	/startseite					controllers.Application.startseiteGet()

#GetStarted
GET		/spiel_erstellen			controllers.GetStarted.spiel_erstellen()
GET		/regelwerk					controllers.GetStarted.regelwerk()
GET		/spiel_beitreten			controllers.UnoGame.spiel_beitreten()

#UnoGame
GET		/game						controllers.UnoGame.gameplay()

#Test
GET		/chat						controllers.Application.testChat()
GET		/webSocket					controllers.Application.webSocket(username)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
